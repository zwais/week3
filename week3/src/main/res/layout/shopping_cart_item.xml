<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:id="@+id/btn_bto">
          <CheckBox
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="全选"
              android:id="@+id/shop_check"
              android:textSize="18dp"
              android:layout_centerVertical="true"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="合计:"
              android:id="@+id/shop_sum"
              android:layout_toRightOf="@id/shop_check"
              android:layout_marginLeft="40dp"
              android:textSize="18dp"
              android:layout_centerVertical="true"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="去结算"
              android:background="#f00"
              android:id="@+id/shop_settlement"
              android:layout_alignParentRight="true"
              android:padding="20dp"
              android:textColor="#ffffff"
              android:textSize="27sp"/>
     </RelativeLayout>
     <android.support.v7.widget.RecyclerView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:id="@+id/recy"
         android:layout_above="@id/btn_bto"></android.support.v7.widget.RecyclerView>
</RelativeLayout>
